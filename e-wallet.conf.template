server {

    listen 80 default_server;

    listen [::]:80 default_server;

    include proxy_params;

    server_name _;

    location / {

        deny all;
        
    }

    location ^~ /payment {

        proxy_pass http://application;
    }

    location ^~ /ussid {

        proxy_pass http://application;
    }

    upstream application {

        least_conn;

        server http://unix:/run/e-wallet/e-wallet.sock;

        keepalive 32;
    }

}